@model PagedList.IPagedList<Models.ViewModel.HocVuViewModel>

@*@model Models.ViewModel.HocVuViewModel*@
@using PagedList.Mvc;
@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
	Danh sách học vụ
}
@section jsFooter{
	<script src="/Assets/admin/js/controller/hocvuController.js"></script>
}
@using (Html.BeginForm("Index", "HocVu", FormMethod.Get))
{

	<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
		<form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
			<table>
				<tbody>
					<tr>
						<td>Tên người dùng</td>
						<td><input type="text" class="form-control bg-light small" aria-label="Search" aria-describedby="basic-addon2" name="searchUser" value="@ViewBag.searchUser"></td>
						<td>Đơn vị</td>
						<td>
							<div class="input-group">
								<select onchange="abc(this)" class="form-control">
									<option value="">Chọn đơn vị</option>
									<option value="1">Phòng công tác HSSV</option>
									<option value="2">Phòng đào tạo</option>
									<option value="3">Phòng tài chính</option>
									<option value="4">Phòng khảo thí và kiểm đinh chất lượng</option>
									<option value="5">Phòng đại học</option>
									<option value="6">Văn phòng Tư vấn và hỗ trợ</option>
									<option value="7">Đoàn Thanh niên và Hội sinh viên</option>
									<option value="8">Công nghệ thông tin</option>
									<option value="9">Khoa quản trị</option>
								</select>
								<input type="text" id="txt" class="form-control bg-light border-0 small" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2" name="searchString" value="@ViewBag.SearchString">
								<div class="input-group-append">
									<button class="btn btn-primary" type="submit">
										<i class="fas fa-search fa-sm"></i>
									</button>
								</div>
							</div>
						</td>
						
					</tr>
				</tbody>
			</table>
		</form>
	</nav>
		}
		<div class="card shadow mb-4">
			<div class="card-body">
				<div class="table-responsive">

					<div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
						<div class="row">
							<div class="col-sm-12">
								<table class="table table-bordered dataTable" width="100" cellpadding="0" role="grid" style="width: 100%;" id="myTable">
									<thead>
										<tr>
											<th>Ngày tạo</th>
											<th>Yêu cầu thêm</th>
											<th>Ngày hẹn</th>
											<th>Đơn vị</th>
											<th>Danh mục</th>
											<th>User</th>
											<th>Vai trò</th>
											<th>Lần gửi</th>
											<th>Tình trạng</th>
											<th>#</th>
										</tr>
									</thead>

									<tbody>

										@foreach (var item in Model)
										{
											<tr id="row_@item.HocVuID" role="row" class="old">
												<td>@(item.NgayTao.HasValue ? item.NgayTao.Value.ToString("dd/MM/yyyy hh:mm tt") : "")</td>
												<td>@item.YeuCauThem</td>
												<td>@(item.NgayHen.HasValue ? item.NgayHen.Value.ToString("dd/MM/yyyy") : "")</td>
												<td>@item.TenDonVi</td>
												<td>@item.TenDanhMuc</td>
												<td>@item.UserName</td>
												<td>@item.TenVaiTro</td>

												@if (item.ParentID == 1)
												{
													<td> Lần đầu tiên</td>
												}
												else
												{
													<td> Lần thứ @item.ParentID</td>
												}
												<td><a href="#" class="btn-active" data-id="@item.HocVuID">@(item.TinhTrang == true ? "Hoàn thành" : "Chưa hoàn thành")</a></td>


												<td>
													<a href="/Admin/HocVu/Edit/@item.HocVuID">Sửa</a>
													|
													@Ajax.ActionLink("Xóa", "Delete",new { @id = item.HocVuID}, new AjaxOptions
											   {
												   Confirm = "Bạn có muốn xóa bản ghi này?",
												   OnComplete= "$('#row_" + @item.HocVuID + "').remove()",
												   HttpMethod = "Delete"

											   })
													|
													<a href="/Admin/HocVu/Chat/@item.HocVuID">Chat</a>
													|
													<a href="/Admin/HocVu/Detai/@item.HocVuID">Detail</a>
												</td>
											</tr>
										}




									</tbody>
								</table>
								<a href="@Url.Action("ExportToExcel","HocVu")">Export Excel</a>
								|
								<p> @Html.ActionLink("Print", "PrintAll")</p>
								@Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchString, @searchUser = ViewBag.searchUser }))

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>



		<script src="~/Assets/admin/vendor/datatables/jquery.dataTables.min.js"></script>
		<script>
			function abc(dditem) {
				var settext = dditem.options[dditem.selectedIndex].innerHTML;
				$('#txt').val(settext);
			}
			document.getElementById("txt").style.display = 'none';
		</script>
